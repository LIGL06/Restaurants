doctype html
html
  head
    meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.header
      .nav-wrapper
        .container
          .row
            .col.s12.m6
              a.brand-logo.platzigram(href='/') Restaurantify
            .col.s2.offset-s9.m6.offset-m6.right-align.hide-on-med-and-down
              a.btn.btn-large.btn-flat.dropdown-button(href='#!', data-activates='drop-user')
                if user
                  p.nmtop-1 #{user.username} #[i.fa.fa-user] #[i.fa.fa-caret-down]
                if !user
                  i.fa.fa-user.nmtop-1
              ul#drop-user.dropdown-content
                if user
                  if user.type
                    li #[a(href='/restaurants/new') Nuevo Restaurante]
                    li #[a(href='/restaurants/all') Mis Restaurantes]
                    li.divider
                    li #[a(href='/offers/new') Nuevo Oferta]
                    li #[a(href='/offers/all') Mis Ofertas]
                    li.divider
                    li #[a(href='/products/new') Nuevo Producto]
                    li #[a(href='/products/all') Mis Productos]
                    li.divider
                  li #[a(href='/rewards/all') Mis Recompensas]
                  li #[a(href='/auth/profile') Mi Perfil]
                  li #[a(href='/auth/signout') Salir]
    block content
    footer.site-footer
      .container
        .row
          .col.s12.l3.push-l9.center-align
            | Â© 2017 | 
            a(href='https://uvmarketing.com.mx', target='_blank') UV Marketing
    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/materialize.min.js')
    script.
      $('select').material_select();
      $('.dropdown-button').dropdown({
        hover: true,
        belowOrigin: true
      });