doctype html
html
  head
    meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.header
      .nav-wrapper
        .container
          .row
            .col.s12.m6
              a.brand-logo.platzigram(href='/') Restaurantify
            .col.s2.offset-s9.m6.offset-m6.right-align
              a.btn.btn-large.btn-flat.dropdown-button(href='#!', data-activates='drop-user')
                i.fa.fa-user
              ul#drop-user.dropdown-content
                li #[a(href='#!') ${translate.message('logout')}]
    block content
    footer.site-footer
      .container
        .row
          .col.s12.l3.center-align
            a.btn.btn-flat.dropdown-button(href='#!', data-activates='footer-dropdown') ${translate.message('language')}
            ul#footer-dropdown.dropdown-content
              li
                a(href='#!', onclick="${lang.bind(null,'es')}") ${translate.message('spanish')}
              li
                a(href='#!', onclick="${lang.bind(null,'en-US')}") ${translate.message('english')}
          .col.s12.l3.push-l6.center-align
