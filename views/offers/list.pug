extends ../layout
block content
    .container
        .row
            .col.l12.m12.s12
                ul.collection.with-header
                    li.collection-header #[h4 Mis ofertas]
                    each offer in offers
                        li.collection-item
                            span.title #[a(href='/offers/'+offer._id) #{offer.name}] #[br] #[small % #{offer.discount} descuento], #[small #{offer.instances} usos]